{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
	integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block title %}Inicio de sesión
{% endblock %}

{% block body %}

		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<html>
				<body>
					<div class="container">
						<h1 class="h3 mb-3 font-weight-normal mt-4">Iniciar sesión</h1>
						<div class="row">

							<div class="col-12">
								<label for="inputEmail">Email:</label>
							</div>

							<div class="col-12">
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							</div>

							<div class="col-12">
								<div id="emailHelpBlock" class="form-text">  Su email debe tener la siguiente estructura: <span style="font-style: italic">ejemplo</span>@gmail.com</div>
							</div>

							<div class="col-12">
								<label for="inputPassword">Contraseña:</label>
							</div>

							<div class="col-12 mb-3">
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
								{# Meter validación #}
								{# <div id="passwordHelpBlock" class="form-text"> Su contraseña debe tener entre 8-20 caracteres de longitud, contener letras y números.</div> #}
							</div>
						</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<button class="btn btn-lg btn-primary" type="submit">Iniciar</button>					

					</div>
				</body>
			</html>			
		</form>


{% endblock %}