{% extends 'base.html.twig' %}

{% block title %}Registro
{% endblock %}

{% block nav %}
	<header>

		<nav class="navbar navbar-expand-lg navbar-light colorFondo">
			<div class="container-fluid">
				<img src="/images/logo.svg" style="width: 6%;">
				<a class="navbar-brand " href="#">
					<h1>ADIST</h1>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item"></li>
						<li class="nav-item">
							<a class="nav-link">Rol:
								<span style="color: green;">Administrador</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link apartados">Nuevo usuario
							</a>
						</li>
					</ul>
				</div>
				<div>
					<a class="d-flex nav-link" href="{{ path('app_logout') }}">
						<span style="color: red;">Cerrar Sesión</span>
					</a>
				</div>
			</nav>
		</header>
		<div>
			<a type="submit" onclick="history.back()" class="ms-3 mt-3">
				<span style="color: blue;">&laquo;</span>
				<span class="ms-2" style="color: blue;">Volver</span>
			</a>
		</div>
	{% endblock %}

	{% block body %}
	<div class="container">
		<div class="row">
			<h1 class="col-6 h3 mb-3 mt-4">Registro</h1>
			{{ form_start(registrationForm) }}
			<div class="col-6 mb-3">
				{{ form_row(registrationForm.name) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				{{ form_row(registrationForm.lastname) }}
				{{ form_row(registrationForm.roles) }}
				{{ form_row(registrationForm.agreeTerms) }}
				<button type="submit" onclick="alert('Usuario creado con éxito.');" class="btn btn-lg btn-success">Registrar</button>
				{{ form_end(registrationForm) }}
			</div>
			<div class="col-6 mb-3">
				{# Poner algo #}
			</div>

		</div>
		<div </div> {% endblock %}
